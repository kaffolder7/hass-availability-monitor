# Environment Configuration
ENVIRONMENT=production

# API Configuration
HASS_API_URL=https://your-homeassistant.example.com/api
HASS_AUTH_TOKEN=your_long_lived_access_token

# Monitoring Settings
MONITORING_CHECK_INTERVAL=60
MONITORING_HEALTH_CHECK_INTERVAL=300
MONITORING_RETRY_COUNT=3
MONITORING_RETRY_INTERVAL=10
MONITORING_MAX_CONCURRENT_JOBS=4

# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_RATELIMIT_WINDOW=300
NOTIFICATIONS_MAX_COUNT=3

# SMS (Twilio) Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM=+1234567890

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
SMTP_FROM=monitor@example.com

# Integration Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/xxx/yyy
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
PAGERDUTY_ROUTING_KEY=your_routing_key

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=30
CACHE_SIZE_LIMIT=1000

# Logging Configuration
LOG_LEVEL=info

# Server Configuration
STATUS_SERVER_PORT=8080

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin